<section class="table-users">
  <h2>Liste Utilisateurs</h2>
  <table>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th><h3>Nom</h3></th>
      <th><h3>Prenom</h3></th>
      <th><h3>Age</h3></th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, edit_admin_user_path(user) %></td>
        <td><%= link_to user.email, edit_admin_user_path(user) %></td>
        <%#<%= link_to user.nom, edit_user_registration_path %>
        <%#<%= link_to user.prenom, edit_user_registration_path(user) %>
        <td><%= user.nom %></td>
        <td><%= user.prenom %></td>
          <%# CALCUL AGE %>
        <td><%= ((Time.zone.now - user.date_naissance.to_time) / 1.year.seconds).floor %></td>
        <td><%= link_to "Supprimer!", admin_user_path(user), method: :delete, data: { confirm: "Etes vous sure?" }, class: "link-destroy" %></td>
      </tr>
    <% end %>
  </table>
<br>
<br>
<%= link_to "Retour", root_path %>
</section>
